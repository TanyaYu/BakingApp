<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:windowBackground">@color/colorBackgroundLight</item>
        <item name="android:colorBackground">@color/colorBackgroundLight</item>
        <item name="android:textColorPrimary">@color/colorPrimaryText</item>
        <item name="android:textColorPrimaryInverse">@color/colorTextPrimaryInverse</item>
        <item name="android:textColorSecondary">@color/colorSecondaryText</item>
    </style>

    <style name="RecipeSectionTitle">
        <item name="android:textSize">@dimen/recipe_section_title_text_size</item>
        <item name="android:padding">@dimen/recipe_section_title_padding</item>
    </style>

    <style name="StepNumberTextView">
        <item name="android:textSize">@dimen/step_number_text_size</item>
        <item name="android:layout_width">@dimen/step_number_width</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="StepDescriptionTextView">
        <item name="android:textSize">@dimen/step_description_text_size</item>
        <item name="android:background">@drawable/step_item_background_rectangle</item>
        <item name="android:padding">@dimen/step_description_padding</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="IngredientDescriptionTextView">
        <item name="android:textSize">@dimen/ingredient_description_text_size</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:padding">@dimen/ingredient_description_padding</item>
    </style>

    <style name="NavigationTextView">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="textAllCaps">true</item>
    </style>
</resources>
